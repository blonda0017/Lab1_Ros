<launch>
  <!-- Arguments -->
  <arg name="model" default="$(env TURTLEBOT3_MODEL)" doc="model type [burger, waffle, waffle_pi]"/>
  <arg name="cmd_vel_topic" default="/cmd_vel" />
  <arg name="odom_topic" default="odom" />
  <arg name="move_forward_only" default="false"/>
  <arg name="global_planner" default="global_planner/GlobalPlanner" doc="global planner type [navfn/NavfnROS, global_planner/GlobalPlanner]"/>

  <!-- move_base -->
  <node pkg="move_base" type="move_base" respawn="false" name="move_base" output="screen">
    <!-- Глобальный планировщик -->
    <param name="base_global_planner" value="$(arg global_planner)" />
    <!-- Локальный планировщик -->
    <param name="base_local_planner" value="dwa_local_planner/DWAPlannerROS" />
    
    <!-- Загрузка общих параметров costmap -->
    <rosparam file="$(find super_blonda_study_pkg)/config/costmap_common_params_$(arg model).yaml" command="load" ns="global_costmap" />
    <rosparam file="$(find super_blonda_study_pkg)/config/costmap_common_params_$(arg model).yaml" command="load" ns="local_costmap" />
    <rosparam file="$(find super_blonda_study_pkg)/config/local_costmap_params.yaml" command="load" />
    <rosparam file="$(find super_blonda_study_pkg)/config/global_costmap_params.yaml" command="load" />
    <rosparam file="$(find super_blonda_study_pkg)/config/move_base_params.yaml" command="load" />
    <rosparam file="$(find super_blonda_study_pkg)/config/dwa_local_planner_params_$(arg model).yaml" command="load" />
    
    <!-- Загрузка параметров global_planner если используется -->
    <rosparam file="$(find super_blonda_study_pkg)/config/global_planner_params.yaml" command="load" if="$(eval global_planner == 'global_planner/GlobalPlanner')" />
    
    <remap from="cmd_vel" to="$(arg cmd_vel_topic)"/>
    <remap from="odom" to="$(arg odom_topic)"/>
    <param name="DWAPlannerROS/min_vel_x" value="0.0" if="$(arg move_forward_only)" />
  </node>
</launch>
